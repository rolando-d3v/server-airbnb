generator client {
  provider = "prisma-client"
  output   = "../src/generated"
}

datasource db {
  provider = "postgresql"
}

model user {
  id_user  String  @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  email    String  @unique
  password String
  name     String?
  role     role[]
}

model role {
  id_role     Int    @id @default(autoincrement())
  name        String
  description String
  user_id     String @db.Uuid
  user        user   @relation(fields: [user_id], references: [id_user])
}

model renta {
  id_renta    Int       @id @default(autoincrement())
  name        String?   @db.VarChar(255)
  description String?
  precio      Decimal?  @default(0.00) @db.Decimal(10, 2)
  img         String?   @db.VarChar(255)
  estado      Boolean?  @default(true)
  create_at   DateTime? @default(now()) @db.Timestamp(6)
}
